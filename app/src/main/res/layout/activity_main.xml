<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="ua.company.tzd.MainActivity">

    <Button
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/btn_scan"
        android:contentDescription="@string/btn_scan"
        android:minHeight="48dp"
        tools:text="Scan" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btn_clear"
        android:contentDescription="@string/btn_clear"
        android:minHeight="48dp"
        tools:text="Clear" />

    <TextView
        android:id="@+id/summaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textStyle="bold"
        android:text="@string/summary_header"
        android:visibility="gone"
        tools:text="Summary" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSummaryByArticle"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        tools:listitem="@layout/item_summary"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvGrandTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="Total: 0"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@android:color/darker_gray"
        android:text="@string/empty_list_message"
        android:visibility="visible"
        tools:text="No items yet" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCodes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        tools:listitem="@layout/item_scanned"
        tools:visibility="visible" />

</LinearLayout>
